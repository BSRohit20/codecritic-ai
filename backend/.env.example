# OpenRouter API Key (Get free tokens at https://openrouter.ai)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# MongoDB Atlas Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
DATABASE_NAME=codecritic

# Email Service (Gmail SMTP - requires app password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
FROM_EMAIL=your_email@gmail.com
FRONTEND_URL=https://codecritic-ai.vercel.app

# JWT Secret (Generate a random 32+ character string)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# reCAPTCHA (Optional - https://www.google.com/recaptcha)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
